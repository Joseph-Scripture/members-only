
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model user {
  id        Int      @id @default(autoincrement())
  firstname String
  lastname  String
  email     String   @unique
  password  String
  messages  message[]
}


model message{
  id      Int    @id @default(autoincrement())
  content String
  userId  Int
  user    user   @relation(fields: [userId], references: [id])
}