<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard</title>

  <style>
    body {
      font-family: "Inter", sans-serif;
      padding: 2rem;
      background: #f8fafc;
    }

    .container {
      max-width: 700px;
      margin: auto;
    }

    h1 {
      margin-bottom: 1rem;
    }

    textarea {
      width: 100%;
      min-height: 80px;
      border-radius: 8px;
      padding: 10px;
      border: 1px solid #ddd;
      outline: none;
      resize: vertical;
      margin-bottom: 1rem;
    }

    button {
      padding: 10px 16px;
      background: #2563eb;
      border: none;
      color: white;
      border-radius: 6px;
      cursor: pointer;
    }

    button:hover {
      background: #1d4ed8;
    }

    .message {
      background: white;
      padding: 1rem;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.05);
      margin-top: 1.2rem;
    }

    .author {
      font-weight: bold;
      color: #1e3a8a;
    }

    .timestamp {
      font-size: 0.85rem;
      color: #6b7280;
      margin-bottom: 0.5rem;
    }
  </style>
</head>

<body>
<div class="container">

  <h1>Welcome, <%= user.firstname %> </h1>

  <form action="/messages/new" method="POST">
    <textarea name="content" required placeholder="Write a message..."></textarea>
    <button type="submit">Post Message</button>
  </form>

  <h2 style="margin-top: 2rem;">Recent Messages</h2>

  <% messages.forEach(msg => { %>
    <div class="message">
      <div class="author">
        <%= msg.user.firstname %> <%= msg.user.lastname %>
      </div>

      <div class="timestamp">
        Message <%= msg.id %>
      </div>

      <p><%= msg.content %></p>
    </div>
  <% }) %>

</div>
</body>
</html>
